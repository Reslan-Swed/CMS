<%- include('../fragments/staff-header', {pageTitle}) %>

<div id="content">

  <a class="back-link" href="<%= `/staff/subjects/show/${page.subjectId}` %>">&laquo; Back to Subject Page</a>

  <div class="page delete">
    <h1>Delete Page</h1>
    <p>Are you sure you want to delete this page?</p>
    <p class="item"><%= page.menuName %></p>

    <form action="<%= `/staff/subjects/${page.subjectId}/pages/delete/${page.id}` %>" method="post">
      <div id="operations">
        <input type="submit" name="commit" value="Delete Page" />
      </div>
    </form>
  </div>

</div>

