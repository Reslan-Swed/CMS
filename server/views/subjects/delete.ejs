<%- include('../fragments/staff-header', { pageTitle,
breadcrumbs: [
{name: 'Subjects', path: '/staff/subjects'},
{name: subject.menuName }
]}) %>

<div id="content">

  <div class="subject delete">
    <h1 class="my-4">Delete Subject</h1>
    <p class="lead">Are you sure you want to delete this subject?</p>
    <h5><span class="badge badge-warning"><%= subject.menuName %></span></h5>

    <form class="mt-4" action="<%= `/staff/subjects/delete/${subject.id}` %>" method="post">
      <div class="form-group row">
        <div class="col-10 offset-1 col-md-2 offset-md-0">
          <button type="submit" class="btn btn-outline-primary btn-sm w-100 text-wrap">Yes, I'm sure</button>
        </div>
      </div>
    </form>
  </div>

</div>

<%- include('../fragments/staff-footer') %>
