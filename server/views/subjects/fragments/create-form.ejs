<h1 class="my-4"> <%= title %> </h1>

    <%- include('../../fragments/error-section') %>

    <form action="<%= actionUrl %>" method="post">
      <div class="form-group row">
        <label for="menuName" class="col-sm-2 col-form-label">Menu Name</label>
        <div class="col-10 offset-1 col-sm-6 offset-sm-0 col-md-4 col-lg-3">
          <input id="menuName" type="text" name="menuName" class="form-control" value="<%= subject.menuName %>" />
        </div>
      </div>
      <div class="form-group row">
        <label for="position" class="col-sm-2 col-form-label">Position</label>
        <div class="col-10 offset-1 col-sm-6 offset-sm-0 col-md-4 col-lg-3">
          <select id="position" name="position" class="form-control custom-select">
            <% for(let i = 1; i <= subjectsCount; i++) { %>
              <%- `<option value="${i}" ${+subject.position === i ? ' selected' : ''}>${i}</option>` %>
            <% } %>
          </select>
        </div>
      </div>
      <fieldset class="form-group row">
        <legend class="col-form-label col-3 col-sm-2 float-left pt-0">Visible</legend>
        <div class="col-9 col-sm-10">
          <div class="custom-control custom-checkbox">
            <input id="visible" class="custom-control-input" type="checkbox" name="visible" value="true" <%= subject.visible ? ' checked' : '' %> />
            <label for="visible" class="custom-control-label"></label>
          </div>
        </div>
      </fieldset>
      <div class="form-group row">
        <div class="col-10 offset-1 col-sm-4 offset-sm-0 col-md-3 col-lg-2">
          <button type="submit" class="btn btn-outline-primary btn-sm w-100"><%= submitButtonLabel %></button>
        </div>
      </div>
    </form>