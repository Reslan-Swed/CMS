<!doctype html>

<html lang="en">
  <head>
    <title>GBI - <%= pageTitle %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" media="all" href="/css/staff.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <a class="navbar-brand" href="#">GBI Staff Area</a>

        <% if (user) { %>
        <span class="navbar-text d-lg-none d-inline-block"><%= user.username %></span>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <div class="navbar-nav w-100">
            <a class="nav-link mr-auto" href="/staff">Menu</a>
            <span class="navbar-text mr-2 d-none d-lg-inline-block"><%= user.username %></span>
            <a class="nav-link" href="/staff/logout">Logout</a>
          </div>
        </div>
        <% } %>
      </div>
    </nav>

    <div class="content container">

      <% if(breadcrumbs) {
        const breadcrumbsCount = breadcrumbs.length;
        const prevPage = breadcrumbsCount > 1 ? breadcrumbs[breadcrumbsCount - 2].path : '/staff/';
      %>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb bg-dark">
            <li class="breadcrumb-item"><a class="text-white" href="/staff/">Home</a></li>
            <% breadcrumbs.forEach((it, index) => { %>
              <%- index === breadcrumbsCount - 1 ? `<li class="breadcrumb-item active text-white-50" aria-current="page">${it.name}</li>`
                      : `<li class="breadcrumb-item" aria-current="page"><a class="text-white" href=${it.path}>${it.name}</a></li>` %>
              <% }) %>
          </ol>
        </nav>
        <%-
          `<nav class="nav nav-pills">
            <a class="nav-link active" href="${prevPage}">&laquo; Go Back</a>
           </nav>`
        %>
      <% } %>
